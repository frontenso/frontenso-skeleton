{
  "compilerOptions": {
    "target": "es5",
    "outDir": "build/assets/js",
    "strict": false,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "watch": true,
    "lib": ["dom", "es2017"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "webpack.config.js",
    "gulpfile.js",
    "gulp-tasks",
    "src/assets/templates",
    "build/"
  ]
}
