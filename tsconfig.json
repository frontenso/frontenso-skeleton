{
  "compilerOptions": {
    "target": "es5",
    "outDir": "build/assets/js",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "watch": true
  },
  "exclude": [
    "node_modules",
    "webpack.config.js",
    "gulpfile.js",
    "gulp-tasks",
    "src/assets/templates",
    "build/"
  ]
}
